<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;netcoreapp2.1</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\NServiceBus.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Fody" Version="6.5.1" PrivateAssets="All" />
    <PackageReference Include="NServiceBus" Version="[8.0.0-alpha.1895, 9.0.0)" />
    <PackageReference Include="Obsolete.Fody" Version="5.2.1" PrivateAssets="All" />
    <PackageReference Include="Particular.Packaging" Version="1.2.1" PrivateAssets="All" />
    <PackageReference Include="RabbitMQ.Client" Version="[6.2.1, 7.0.0)" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.RabbitMQ</PackageId>
    <Description>RabbitMQ support for NServiceBus</Description>
  </PropertyGroup>

</Project>
